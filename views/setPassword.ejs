<%- include('partials/Header',{user:null,search:null}) %>
<div class="registerContainer">
    <% if(message!==null) {%>
        <span class="bg-<%=color%> message otpMessage"><%=message%></span>
        <% }%>
        <br>
    <form method="post" action="/set-password" class="registerForm">
        <h1>Create Password</h1>
        <div class="input-container">
            <i class="ri-lock-2-line"></i>
            <input type="password" name="password" placeholder="Password" required/>
            
        </div>
        <div class="input-container">
         <i class="ri-lock-2-line"></i>
         <input type="password" name="confirmPassword" placeholder="Confirm Password" required/>  
     
      </div>
      <p class="tip"><i class="ri-lightbulb-flash-line"></i> <span>Stronger = Secure</span></p>
        <button class="passwordBtn" type="submit">Submit</button>
    </form>
</div>
<%- include('partials/Footer') %>